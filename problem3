#include <iostream>
using namespace std;

int reverse(int n, int rev =0){
    if (n<1) {
        return rev;
    }
    return reverse (n/10, rev = rev*10 + n%10);
}

int main() {

    int number;
    cout << "Enter number to check: ";
    cin >> number;

    if (number == reverse(number)) {
        cout << "true";
    } else {
        cout << "false";
    }

    return 0;
}
